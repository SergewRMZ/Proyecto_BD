<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="contenedor" prefHeight="250.0" prefWidth="400.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ERextendidoController">
    <stylesheets>
        <URL value="@/CSS/erextendido.css" />
    </stylesheets>
   <children>
      <GridPane prefHeight="250.0" prefWidth="400.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <RadioButton fx:id="partParcial" mnemonicParsing="false" text="Participación Parcial">
               <font>
                  <Font name="Century Gothic" size="15.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="partTotal" mnemonicParsing="false" text="Participación Total" GridPane.columnIndex="1">
               <font>
                  <Font name="Century Gothic" size="15.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="disyuncion" mnemonicParsing="false" text="Disyunción" GridPane.rowIndex="1">
               <font>
                  <Font name="Century Gothic" size="15.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="traslape" mnemonicParsing="false" text="Traslape" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Century Gothic" size="15.0" />
               </font>
            </RadioButton>
            <Button fx:id="btnAceptar" mnemonicParsing="false" prefHeight="25.0" prefWidth="135.0" text="Aceptar" GridPane.rowIndex="2" />
            <ChoiceBox fx:id="choiceEntidades" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
